# Flask
FLASK_ENV=development
FLASK_APP=app.wsgi:app
APP_NAME=Orion Gateways API
APP_HOST=0.0.0.0
APP_PORT=7000
API_KEY=super-secret-admin-key

# External Integrations (mock/demo)
ORION_MONEY_BASE_URL=https://api.orionmoney.example
ORION_MONEY_API_KEY=orion-money-key
CARD_PSP_BASE_URL=https://api.cardpsp.example
CARD_PSP_API_KEY=card-psp-key
KYC_BASE_URL=https://api.kyc.example
KYC_API_KEY=kyc-key

# Webhook security
WEBHOOK_SHARED_SECRET=replace-me
WEBHOOK_ALLOWED_SKEW_SECONDS=300

# Database (PostgreSQL)
DB_USER=orion
DB_PASSWORD=orion
DB_HOST=localhost
DB_PORT=5432
DB_NAME=orion_gateways

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CLIENT_ID=gateways
KAFKA_DLQ_TOPIC=gateways.dlq